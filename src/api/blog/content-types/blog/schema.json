{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 32,
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "publishStatus": {
      "type": "enumeration",
      "required": true,
      "default": "draft",
      "enum": [
        "draft",
        "scheduled",
        "published"
      ]
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60,
      "required": true,
      "unique": true
    },
    "seoDescription": {
      "type": "string",
      "maxLength": 160,
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 200,
      "required": true
    }
  }
}
